{
	"name": "phpgt/domvalidation",
	"description": "Server side form validation using web standards.",

	"license": [
		"MIT"
	],

	"type": "library",

	"repositories": [
		{
			"type": "path",
			"url": "/home/g105b/Code/PhpGt/Dom",
			"options": {
				"symlink": true
			}
		}
	],

	"minimum-stability": "dev",
	"prefer-stable": true,

	"require": {
